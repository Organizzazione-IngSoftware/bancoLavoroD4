    "paths": {



        "/movie/create": {
            "post": {
                "tags": ["movie"],
                "summary": "Insert a movie in the database",
                "parameters": [
                    {
                        "name": "titolo",
                        "in": "body",
                        "description": "The title of the movie",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "regista",
                        "in": "body",
                        "description": "Name and surname of the movie's regist",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "etaCons",
                        "in": "body",
                        "description": "The recommended age to watch the movie",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "copertina",
                        "in": "body",
                        "description": "A pic that represents the movie",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "durata",
                        "in": "body",
                        "description": "How long the movie lasts, in minutes",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "generi",
                        "in": "body",
                        "description": "A list of the genres of the movie",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "piattaforme",
                        "in": "body",
                        "description": "Where you can watch the movie: Netflix, Prime Video ecc...",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "The movie has bbeen inserted into the database"
                    },
                    "409": {
                        "description": "This title already exists in the database"
                    },
                    "401": {
                        "description": "You are not authorized"
                    }
                }
            }
        },



        "/movie/getAll": {
            "get": {
                "tags": ["movie"],
                "summary": "Get all movies from the database",
                "responses": {
                    "200": {
                        "description": "Extraction of the movies completed",
                        "schema": {
                            "$ref": "#/definitions/miniaturaMovie"
                        }
                    }
                }
            }
        },



        "/movie/deleteAll": {
            "delete": {
                "tags": ["movie"],
                "summary": "Delete all movies from the database",
                "responses": {
                    "204": {
                        "description": "All the movies has been deleted"
                    },
                    "401": {
                        "description": "You are not authorized"
                    }
                }
            }
        },



        "/movie/getByTitleRegist": {
            "get": {
                "tags": ["movie"],
                "summary": "Get a list of movies with a specific title or a specific regist",
                "parameters": [
                    {
                        "name": "param",
                        "in": "header",
                        "description": "The title of the movie or the regist",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The movies have been extracted from the database",
                        "schema": {
                            "$ref": "#/definitions/miniaturaMovie"
                        }
                    }
                }
            }
        },



        "/movie/deleteOne": {
            "delete": {
                "tags": ["movie"],
                "summary": "delete a movie with a specific title or a specific regist",
                "parameters": [
                    {
                        "name": "titolo",
                        "in": "header",
                        "description": "The title of the movie",
                        "type": "string"
                    },
                    {
                        "name": "regista",
                        "in": "header",
                        "description": "The regist of the movie",
                        "type": "string"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "The movie have been deleted from the database"
                    },
                    "404": {
                        "description": "The movie you want to delete doesn't exists"
                    },
                    "401": {
                        "description": "You are not authorized"
                    }
                }
            }
        },



        "/movie": {
            "get": {
                "tags": ["movie"],
                "summary": "find a movie with a specific id",
